{
  "name": "@coinbase/cdp-core",
  "version": "0.0.67",
  "type": "module",
  "files": [
    "dist/**",
    "!dist/**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "react-native": {
        "types": "./dist/types/index.native.d.ts",
        "default": "./dist/esm/index.native.js"
      },
      "browser": {
        "types": "./dist/types/index.web.d.ts",
        "default": "./dist/esm/index.web.js"
      },
      "types": "./dist/types/index.web.d.ts",
      "default": "./dist/esm/index.web.js"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@solana/kit": "^2.1.1",
    "@solana/web3.js": "^1.98.4",
    "bs58": "^6.0.0",
    "jose": "^6.0.11",
    "ox": "0.8.1",
    "viem": "^2.33.0",
    "zustand": "^5.0.6",
    "@coinbase/cdp-api-client": "^0.0.67"
  },
  "peerDependencies": {
    "@react-native-async-storage/async-storage": "^2.0.0",
    "expo-secure-store": "^15.0.0",
    "expo-web-browser": "^15.0.0",
    "x402-fetch": "^0.7.0"
  },
  "peerDependenciesMeta": {
    "@react-native-async-storage/async-storage": {
      "optional": true
    },
    "expo-secure-store": {
      "optional": true
    },
    "expo-web-browser": {
      "optional": true
    },
    "x402-fetch": {
      "optional": true
    }
  },
  "devDependencies": {
    "@size-limit/preset-big-lib": "^11.2.0",
    "@size-limit/webpack": "^11.2.0",
    "@size-limit/webpack-why": "^11.2.0",
    "size-limit": "^11.2.0"
  },
  "size-limit": [
    {
      "name": "full-package",
      "path": "./dist/esm/index.web.js",
      "running": false,
      "import": "*",
      "limit": "115 KB"
    },
    {
      "name": "auth-only",
      "path": "./dist/esm/index.web.js",
      "running": false,
      "import": "{ signInWithEmail, verifyEmailOTP, getCurrentUser, isSignedIn, signOut }",
      "limit": "80 KB"
    },
    {
      "name": "evm-only",
      "path": "./dist/esm/index.web.js",
      "running": false,
      "import": "{ signEvmHash, signEvmTransaction, sendEvmTransaction, signEvmMessage, signEvmTypedData }",
      "limit": "82 KB"
    },
    {
      "name": "export",
      "path": "./dist/esm/index.web.js",
      "running": false,
      "import": "{ exportEvmAccount }",
      "limit": "80 KB"
    },
    {
      "name": "provider-only",
      "path": "./dist/esm/index.web.js",
      "running": false,
      "import": "{ createCDPEmbeddedWallet }",
      "limit": "105 KB"
    }
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run check:types && pnpm run build:web && pnpm run build:native && pnpm run build:consolidate",
    "build:web": "vite build --config ./vite.config.web.ts",
    "build:native": "vite build --config ./vite.config.native.ts",
    "build:consolidate": "mkdir -p dist/esm dist/types && cp -r dist/web/* dist/esm/ && cp -r dist/native/* dist/esm/ && cp -r dist/web-types/* dist/types/ && cp -r dist/native-types/* dist/types/",
    "check:types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "clean:all": "pnpm clean && rm -rf node_modules",
    "size-limit": "size-limit",
    "size-limit:why": "size-limit --why",
    "test": "vitest",
    "test:run": "vitest --run"
  }
}